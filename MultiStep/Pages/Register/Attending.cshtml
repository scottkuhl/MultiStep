@page
@model MultiStep.Pages.Register.AttendingModel

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<h4>Which events will you be attending?</h4>
<hr />

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AttendingViewModel.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AttendingViewModel.Ceremony" /> @Html.DisplayNameFor(model => model.AttendingViewModel.Ceremony)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AttendingViewModel.Reception" /> @Html.DisplayNameFor(model => model.AttendingViewModel.Reception)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AttendingViewModel.Trip" /> @Html.DisplayNameFor(model => model.AttendingViewModel.Trip)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Basic" asp-route-id="@Model.AttendingViewModel.Id">Back to Previous Step</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
