@page
@model MultiStep.Pages.Register.MealModel

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<h4>Which meal would you like?</h4>
<hr />

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MealViewModel.Id" />
            <div class="form-group">
                <label asp-for="MealViewModel.Meal" class="control-label"></label>
                <select asp-for="MealViewModel.Meal" asp-items="Model.MealList" class="form-control"></select>
                <span asp-validation-for="MealViewModel.Meal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Attending" asp-route-id="@Model.MealViewModel.Id">Back to Previous Step</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
