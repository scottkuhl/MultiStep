@page
@model MultiStep.Pages.Register.BasicModel

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<h4>Who is coming?</h4>
<hr />

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BasicViewModel.Id" />
            <div class="form-group">
                <label asp-for="BasicViewModel.Name" class="control-label"></label>
                <input asp-for="BasicViewModel.Name" class="form-control" />
                <span asp-validation-for="BasicViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BasicViewModel.IsComing" /> @Html.DisplayNameFor(model => model.BasicViewModel.IsComing)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
